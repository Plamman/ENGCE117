#include <stdio.h>

void GetMatrix( int value[][10], int *row, int *col ) {

printf( "Enter the number of rows:" ) ;
scanf( "%d" , row ) ;

printf( "Enter the number of columns:" ) ;
scanf( "%d" , col ) ;

printf( "Enter the matrix elements:" ) ;
for (int i = 0; i < *row; i++) {
        for (int j = 0 ; j < *col ; j++ ) {
            scanf( "%d", &value[i][j] ) ;
        }
    }
     
}

int main() {
    int data[10][10] ;
    int m, n ;

    GetMatrix( data, &m, &n ) ;
    printf( "Matrix (%dx%d):\n" , m , n ) ;
    for (int i = 0 ; i < m ; i++ ) {
        for (int j = 0 ; j < n ; j++ ) {
            printf( "%d ", data[i][j] ) ;
        }
        printf("\n");
    }

    return 0 ;
}//end function
