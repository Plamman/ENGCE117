#include <stdio.h>

int* GetMatrix( int *row , int *col ) {
    
    printf( "Enter number of rows and columns: " ) ;
    scanf("%d %d", row , col) ;

    
    static int matrix[50][50] ;  
    printf( "Enter matrix elements:\n" ) ;

    
    for ( int i = 0 ; i < *row ; i++ ) {
        for ( int j = 0 ; j < *col ; j++ ) {
            scanf( "%d" , &matrix[i][j] ) ;  
        }
    }

    
    return (int*)matrix ;  
}

int main() {
    int *data , m , n ;

    
    data = GetMatrix( &m , &n ) ;

    
    printf( "Matrix elements:\n" ) ;
    for ( int i = 0 ; i < m ; i++ ) {
        for ( int j = 0 ; j < n ; j++ ) {
            printf("%d " , *( data + i * n + j ) ) ;  
        }
        printf( "\n" ) ;
    }

    return 0 ;
}
